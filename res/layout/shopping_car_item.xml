<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_picture_name"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_picture_name"
        android:text="河虾仁(大)约250g" />

    <TextView
        android:id="@+id/tv_single_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_picture_name"
        android:text="19.5" />
    <!-- <TextView -->
    <!-- android:id="@+id/weight" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:text="重量：" -->
    <!-- android:layout_toRightOf="@+id/tv_single_price" -->
    <!-- android:layout_marginTop="20dp" -->
    <!-- android:layout_below="@+id/tv_name" -->
    <!-- /> -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_single_price" >

        <TextView
            android:id="@+id/tv_jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#ff7f50"
            android:gravity="center"
            android:text="-"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#c0c0c0"
            android:gravity="center"
            android:text="0"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_jia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#ff7f50"
            android:gravity="center"
            android:text="+"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/btn_star" />

</RelativeLayout>